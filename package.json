{
  "name": "noumena-runners-bot",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@slack/events-api": "^3.0.1",
    "@slack/web-api": "^6.7.2",
    "dotenv": "^16.0.2",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "commit-message-validator": "^1.0.2",
    "eslint": "^8.23.1",
    "eslint-plugin-check-file": "^1.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard": "^14.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.+(ts|tsx|js|jsx)": "yarn eslint --fix --quiet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commit-message-validator"
    }
  },
  "config": {
    "commit-message-validator": {
      "_comment": "pattern can be Regex string or array of Regex string",
      "pattern": "^([A-Z]{1,4}-\\d{1,4}: )[a-zA-Z]",
      "errorMessage": "Correct commit message format example - 'CCC-1232: your message'"
    }
  }
}
